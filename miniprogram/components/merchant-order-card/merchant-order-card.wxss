
.card-container {
  position: relative;
  margin: 25rpx auto;
  padding-top: 35rpx;
  padding-bottom: 35rpx;
  width: 700rpx;
  height: fit-content;
  border-radius: 35rpx;
  background-color: #fff;
}

.card-top {
  display: flex;
  flex-direction: row;
}

.order-number {
  position: relative;
  display: inline-block;
  height: 60rpx;
  left: -8rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 38rpx;
  font-family: sans-serif;
  width: 100rpx;
  background-color: #36394d;
  color: white;
}

.order-number::after {
  position: absolute;
  left: 100%;
  height: 0;
  line-height: 0;
  font-size: 0;
  overflow: hidden;
  border: solid transparent;
  border-width: 30rpx 20rpx 30rpx 20rpx;
  border-color: transparent transparent transparent #36394d;
  content: ' ';
}

.suggest-arrive-time {
  float: left;
  margin-left: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #36394d;
  font-size: 35rpx;
  font-weight: 600;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
}

.card-center {
  display: flex;
  flex-direction: column;
}

.center-list-item {
  padding: 0 35rpx;
}

.prepared-flex {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.right-content {
  display: flex;
  align-items: center;
}

.complete-button {
  display: inline-block;
  padding: 0;
  height: 60rpx;
  width: 150rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 27rpx;
  font-weight: 600;
  border: #fbbf60 solid 1px;
  color: #fbbf60;
  border-radius: 8rpx;
}

.center-list-item :first-child{
  margin-top: 15rpx;
}
.center-list-item :last-child{
  margin-bottom: 15rpx;
}

.dark-text {
  height: 60rpx;
  line-height: 60rpx;
  color: #36394d;
  font-size: 35rpx;
  font-weight: 600;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
}

.yellow-text {
  height: 50rpx;
  line-height: 50rpx;
  color: #fbbf60;
  font-size: 30rpx;
  font-weight: 600;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
}

.grey-text {
  height: 50rpx;
  line-height: 50rpx;
  color: #a4a5ae;
  font-size: 30rpx;
  font-family: sans-serif;
}

.call-user-icon {
  position: absolute;
  top: 125rpx;
  right: 45rpx;
}

.call-rider-icon {
  position: absolute;
  top: 430rpx;
  right: 45rpx;
}

.divider {
  margin: 2px 15px !important;
}

.collapse-class {
  color: #36394d;
  font-size: 35rpx;
  font-weight: 600;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
}

.picked-item {
  display: flex;
  flex-direction: row;
  align-content: center;
}

.picked-item view {
  margin: 15rpx auto;
  flex: 1;
  display: inline-block;
  height: 35rpx;
  line-height: 35rpx;
  text-align: left;
}