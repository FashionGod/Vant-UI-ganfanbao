/* components/shopCard/shopCard.wxss */
.card-container {
  display: flex;
  position: relative;
  align-items: center;
  padding: 25rpx;
  justify-content: space-between;
  margin: 15rpx 15rpx 15rpx 15rpx;
  border-radius: 15rpx;
  background-color: #fffffff1;
}

.merchant-image {
  display: inline-block;
  overflow: hidden;
  height: 200rpx;
  width: 200rpx;
  border-radius: 12rpx;
}

.card-left {
}

.card-middle {
  padding: 0;
  margin-left: 15rpx;
  height: 250rpx;
  width: 350rpx;
  font-weight: 300;
  color: #1d1c1c;
  font-size: 0.8rem;
}
.time {
  margin-top: 25rpx;
}
.desc {
  margin-top: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.merchant-title {
  margin-top: 10rpx;
  color: black;
  font-size: 1rem;
  font-weight: 600;
}
.transfer-price {
  margin-top: 10rpx;
}
.full-reduce-preferential {
  margin-top: 10rpx;
}

.card-right {
  margin-left: 0rpx;
  height: 200rpx;
  font-weight: 300;
  color: #696767;
  font-size: 0.8rem;
}
.order-status {
  margin-bottom: 50rpx;
}
.price {
  color: red;
  font-weight: 600;
}
.views {
  position: absolute;
  top: 207rpx;
  left: 419rpx;
  height: 55rpx;
  width: 145rpx;
  line-height: 55rpx;
  text-align: center;
  border-radius: 15rpx;
  border: #a8a5a5 solid 1px;
  font-size: small;
  color: rgb(32, 31, 31);
}