.card-container {
  margin: 15rpx auto;
  width: 700rpx;
  background-color: rgb(78, 76, 76);
}

.card-top {}

.order-number {
  position: relative;
  display: inline-block;
  height: 40rpx;
  width: 70rpx;
  background-color: black;
  color: white;
}

.order-number::after {
  position: absolute;
  left: 100%;
  height: 0;
  line-height: 0;
  font-size: 0;
  overflow: hidden;
  border: solid transparent;
  border-width: 20rpx;
  border-left: red solid;
  content: ' ';
}