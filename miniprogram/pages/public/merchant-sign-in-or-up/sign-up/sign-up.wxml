<scroll-view enhanced showScrollbar="{{false}}" scroll-y="{{true}}"  class="page-container">
  <view class="page-title">
    <image class="title-image" mode="widthFix" src="../../../../assets/merchantImages/merchantInformation.png" alt="商户信息" />
  </view>
    <form catchsubmit="formSubmit" catchreset="formReset">
  <view class="function-container">
    <van-cell-group>
      <van-field required name="userName" clearable placeholder="作为登录唯一Id" value="{{name}}" maxlength="8" label="用户名" left-icon="contact" bind:blur="checkUserName" error-message="{{sameName}}" />
      <van-field required name="password" clearable placeholder="请设置登录密码" maxlength="16" value="{{password}}" label="登录密码" left-icon="closed-eye" />
      <van-field required name="name" clearable placeholder="请输入真实姓名" value="{{name}}" maxlength="8" label="姓名" left-icon="contact" />
      <van-field required name="phoneNumber" clearable placeholder="请输入手机号" type="number" maxlength="11" value="{{phoneNumber}}" label="手机号"
      left-icon="phone-o" />
      <van-field required name="IDNumber" type="idcard" clearable placeholder="请输入身份证号" maxlength="18" value="{{IDNumber}}" label="身份证号" left-icon="idcard" />
      <van-field required clearable readonly label="身份认证" left-icon="photo-o" border="{{ false }}" />
    </van-cell-group>
    <view class="uploader-container">
      <view class="instance-and-image">
        <text user-select="true">身份证正面：</text>
        <van-uploader file-list="{{ IdFrontInstance }}" preview-size="188rpx" image-fit="scaleToFill" max-count="1"/>
        <van-uploader file-list="{{ IdFront }}" preview-size="188rpx" max-count="1" deletable="{{ true }}" bind:after-read="chooseIdFront" bind:delete="deleteIdFront" />
      </view>
      <view class="instance-and-image">
        <text user-select="true">身份证反面：</text>
        <van-uploader file-list="{{ IdReverseInstance }}" preview-size="188rpx" image-fit="scaleToFill" max-count="1"/>
        <van-uploader file-list="{{ IdReverse }}" preview-size="188rpx" max-count="1" deletable="{{ true }}" bind:after-read="chooseIdReverse" bind:delete="deleteIdReverse" />
      </view>
    </view>
    <van-cell-group>
      <van-field required clearable readonly label="经营许可" left-icon="photo-o" border="{{ false }}" />
    </van-cell-group>
    <view class="uploader-container">
      <view class="instance-and-image">
        <text user-select="true">营业执照：</text>
        <van-uploader file-list="{{ businessLicenseInstance }}" preview-size="188rpx" image-fit="scaleToFill" max-count="1"/>
        <van-uploader file-list="{{ businessLicense }}" preview-size="188rpx" max-count="1" deletable="{{ true }}" bind:after-read="chooseBusinessLicense" bind:delete="deleteBusinessLicense" />
      </view>
      <view class="instance-and-image">
        <text user-select="true">食品许可：</text>
        <van-uploader file-list="{{ foodLicenseInstance }}" preview-size="188rpx" image-fit="scaleToFill" max-count="1"/>
        <van-uploader file-list="{{ foodLicense }}" preview-size="188rpx" max-count="1" deletable="{{ true }}" bind:after-read="chooseFoodLicense" bind:delete="deleteFoodLicense" />
      </view>
    </view>
    <van-cell-group>
      <van-field required clearable readonly label="门店照片" left-icon="photo-o" border="{{ false }}" />
    </van-cell-group>
    <view class="uploader-container">
      <view class="instance-and-image">
        <text user-select="true">商家门面：</text>
        <van-uploader file-list="{{ merchantDoorInstance }}" preview-size="188rpx" image-fit="scaleToFill" max-count="1"/>
        <van-uploader file-list="{{ merchantDoor }}" preview-size="188rpx" max-count="1" deletable="{{ true }}" bind:after-read="chooseMerchantDoor" bind:delete="deleteMerchantDoor" />
      </view>
      <view class="instance-and-image">
        <text user-select="true">店内环境：</text>
        <van-uploader file-list="{{ merchantEnvironmentInstance }}" preview-size="188rpx" image-fit="scaleToFill" max-count="1"/>
        <van-uploader file-list="{{ merchantEnvironment }}" preview-size="188rpx" max-count="1" deletable="{{ true }}" bind:after-read="chooseMerchantEnvironment" bind:delete="deleteMerchantEnvironment" />
      </view>
    </view>
    <button formType="submit" class="submit">
      提交
    </button>
  </view>
    </form>
    <view class="blank"></view>
</scroll-view>