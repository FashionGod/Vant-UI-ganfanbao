
.scroll-view {
  height: 100vh;
}

.bottom-loading {
  height: 150rpx;
	width: 720rpx;
	text-align: center;
}

.mission-card {
  display: block;
  margin: 15rpx;
}

.page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  width: 100%;
}
.profile-picture {
  display: flex;
  flex-direction: column;
  margin: 0;
  align-items: center;
  height: 400rpx;
  width: 100%;
  border: none;
  background: #ffca02;
}

.disapear {
  opacity: 0;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 30rpx auto;
  border-radius: 50%;
  background: #ffca02;
}

.userinfo-nickname {
  color: #000;
  background: #ffca02;
} 

.function-container {
  margin: 20rpx auto;
  width: 550rpx;
  height: 630rpx;
  padding: 65rpx 0 15rpx 0;
  border-radius: 8%;
  background-color: #fff;
  transform: translatey(-130rpx);
}
.copyright {
  font-size: 28rpx;
  color: #999;
  position: fixed;
  bottom: 15rpx;
  left: 0;
  right: 0;
  padding: 30rpx;
  text-align: center;
}