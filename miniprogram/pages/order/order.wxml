<van-tabs swipeable color="#ffb300" title-active-color="#ffb300" animated>
  <van-tab title="全部">
    <scroll-view enhanced showScrollbar="{{false}}" scroll-y="{{true}}" class="scroll-view" refresher-enabled="{{true}}"
      enable-back-to-top="{{true}}" refresher-triggered="{{pullDownloading}}" bindrefresherrefresh="pullDownFresh"
      bindscrolltolower="scrollTouchedBottom">
      <view class="merchant-list">
        <!-- 商家列表 -->
        <view wx:for="{{['00','11','22','33','44','55','66','77','88','99']}}" wx:key="*this">
          <user-order-card bindlongpress="delete" bindtap="navigateToOrderDetail" data-item="{{item}}" merchantImg="{{merchantImg1}}"></user-order-card>
          <user-order-card bindlongpress="delete" bindtap="navigateToOrderDetail" data-item="{{item}}" merchantImg="{{merchantImg2}}"></user-order-card>
        </view>
      </view>
      <!--触底的loading  -->
      <view class="bottom-loading">
        <van-loading wx:if="{{scrollTouchedBottomLoading}}" type="spinner" size="15px">正在加载呢，稍等会...</van-loading>
      </view>
    </scroll-view>
  </van-tab>
  <van-tab title="未评价">
    <scroll-view enhanced showScrollbar="{{false}}" scroll-y="{{true}}" class="scroll-view" refresher-enabled="{{true}}"
      enable-back-to-top="{{true}}" refresher-triggered="{{true}}" bindrefresherrefresh="pullDownFresh"
      bindscrolltolower="scrollTouchedBottom">
      <view class="merchant-list">
        <!-- 商家列表 -->
        <user-order-card merchantImg="{{merchantImg1}}"></user-order-card>
        <user-order-card merchantImg="{{merchantImg2}}"></user-order-card>
        <user-order-card merchantImg="{{merchantImg1}}"></user-order-card>
        <user-order-card merchantImg="{{merchantImg1}}"></user-order-card>
        <user-order-card merchantImg="{{merchantImg2}}"></user-order-card>
        <user-order-card merchantImg="{{merchantImg1}}"></user-order-card>
        <user-order-card merchantImg="{{merchantImg1}}"></user-order-card>
        <user-order-card merchantImg="{{merchantImg2}}"></user-order-card>
        <user-order-card merchantImg="{{merchantImg1}}"></user-order-card>
        <user-order-card merchantImg="{{merchantImg2}}"></user-order-card>
      </view>
      <!--触底的loading  -->
      <view class="bottom-loading">
        <van-loading wx:if="{{scrollTouchedBottomLoading}}" type="spinner" size="15px">正在加载呢，稍等会...</van-loading>
      </view>
    </scroll-view>
  </van-tab>
</van-tabs>