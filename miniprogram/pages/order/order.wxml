    <scroll-view enhanced showScrollbar="{{false}}" scroll-y="{{true}}" class="scroll-view" refresher-enabled="{{true}}"
      enable-back-to-top="{{true}}" refresher-triggered="{{pullDownloading}}" bindrefresherrefresh="pullDownFresh"
      bindscrolltolower="scrollTouchedBottom">
        <!-- 订单列表 -->
      <block wx:if="{{orderList.length > 0}}">
      <view class="merchant-list">
        <view wx:for="{{orderList}}" wx:key="_id">
          <user-order-card bindlongpress="delete" bindtap="navigateToOrderDetail" bind:navigateToView="navigateToView" data-item="{{item}}" orderItem="{{item}}"></user-order-card>
        </view>
      </view>
      <!--触底的loading  -->
      <view class="bottom-loading">
        <van-loading wx:if="{{scrollTouchedBottomLoading}}" type="spinner" size="15px">正在加载呢，稍等会...</van-loading>
      <van-divider hairline contentPosition="center" wx:if="{{showEnd}}" >人家也是有底线的啦</van-divider>
      </view>
      </block>
      <block wx:else>
        <van-empty class="custom-image" description="暂无订单" />
      </block>
    </scroll-view>
