page{
  height: 100%;
  background: #ffca02;
}

.head{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.head image{
  margin-top: 200rpx;
  border-radius: 50%;
  width: 175rpx;
  height: 175rpx;
}
.head text{
  margin-top: 50rpx;
  font-size: 1.1em;
  font-weight: bolder;
}
.head button{
  color:#1b1b1d;
  font-size: 0.9rem;
  margin-top:100rpx;
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(240, 229, 126, 0.863);
  border: 2rpx solid #405f80;
}
.head .button_hover{
  background: rgba(146, 140, 97, 0.863);
  color: #1b1b1d;
}
.copyright {
  font-size: 28rpx;
  color: rgb(80, 77, 77);
  position: fixed;
  bottom: 15px;
  left: 0;
  right: 0;
  padding: 30rpx;
  text-align: center;
}

.van-cell{
  margin: 20rpx auto;
  width: 600rpx;
  border-radius: 20rpx;
}

.button-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  width: 600rpx;
}